# Terminal
alias cls='clear'
alias vim='nvim'
alias ls='exa'

# Config File
alias zr='source $HOME/.zshrc'
alias zv='vim $HOME/.zshrc'

# Trash
alias rm='trash'

# Brew
alias bi='brew install'
alias bs='brew search'
alias br='brew uninstall'
alias bci='brew install --cask'
alias bcr='brew uninstall --cask'
alias bsero='brew services start'
alias bserc='brew services stop'

# Git
alias ga='git add'
alias gi='git init'
alias gll='git pull'
alias gsh='git push'
alias gcm='git commit -m'

# Npm
alias ni='npm install'
alias nr='npm run'
alias ngi='npm install -g'
alias ngr='npm uninstall -g'
alias ngl='npm list -g --depth 0'
alias ngupdate='npm-check -gu'
